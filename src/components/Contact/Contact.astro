---
/**
 * * Contact section for the website
 */

import { Icon } from "astro-icon/components";

// components
import ContactForm from "@components/Forms/ContactForm.astro";

interface Props {
	class?: string;
}

const { class: className } = Astro.props as Props;

// Contact info
const contactInfo = {
  address: "Fryderyka Szopena 33, 33-055 Rzeszów",
  phone: "+48 123 456 789",
  email: "kontakt@beautyandcare.pl",
  hours: [
    { days: "Poniedziałek - Piątek", hours: "10:00 - 20:00" },
    { days: "Sobota", hours: "10:00 - 16:00" },
    { days: "Niedziela", hours: "Zamknięte" }
  ],
  social: [
    { name: "Facebook", url: "https://facebook.com/", icon: "socials/mdi-facebook" },
    { name: "Instagram", url: "https://instagram.com/", icon: "socials/basil-instagram-solid" }
  ]
};

// Google Maps embed URL with the address
const mapsEmbedUrl = `https://www.google.com/maps/embed/v1/place?key=AIzaSyBXX56OwIHEAh4xNsM8ydakzM-Qm7-yD5s&q=${encodeURIComponent(contactInfo.address)}&zoom=15`;
---

<section
	id="contact"
	class="mx-auto max-w-md scroll-mt-10 px-4 py-8 md:max-w-6xl md:py-12"
	class:list={[className]}
>
	<div class="mx-auto max-w-6xl text-center mb-12">
		<h2 class="h2 text-pretty uppercase">Kontakt</h2>
		<p class="mt-4 text-lg text-base-600 max-w-3xl mx-auto">
			Skontaktuj się z nami, aby umówić się na konsultację lub zadać pytania dotyczące naszych zabiegów
		</p>
	</div>

	<div class="grid gap-12 md:grid-cols-2">
		<!-- Contact information -->
		<div class="space-y-8">
			<div class="bg-white p-6 rounded-lg shadow-sm border border-primary-100">
				<h3 class="text-2xl font-semibold text-primary-700 mb-6">Informacje kontaktowe</h3>
				
				<div class="space-y-4">
					<div class="flex items-start gap-4">
						<div class="text-primary-500 mt-1">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
								<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
							</svg>
						</div>
						<div>
							<h4 class="font-medium">Adres</h4>
							<p class="text-gray-600">{contactInfo.address}</p>
							<a href={`https://maps.google.com/?q=${encodeURIComponent(contactInfo.address)}`} target="_blank" class="text-primary-500 text-sm hover:underline mt-1 inline-block">
								Otwórz w Google Maps
							</a>
						</div>
					</div>
					
					<div class="flex items-start gap-4">
						<div class="text-primary-500 mt-1">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
							</svg>
						</div>
						<div>
							<h4 class="font-medium">Telefon</h4>
							<p class="text-gray-600">
								<a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="hover:text-primary-600">{contactInfo.phone}</a>
							</p>
						</div>
					</div>
					
					<div class="flex items-start gap-4">
						<div class="text-primary-500 mt-1">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
							</svg>
						</div>
						<div>
							<h4 class="font-medium">Email</h4>
							<p class="text-gray-600">
								<a href={`mailto:${contactInfo.email}`} class="hover:text-primary-600">{contactInfo.email}</a>
							</p>
						</div>
					</div>
				</div>
			</div>
			
			<div class="bg-white p-6 rounded-lg shadow-sm border border-primary-100">
				<h3 class="text-2xl font-semibold text-primary-700 mb-6">Godziny otwarcia</h3>
				
				<div class="space-y-2">
					{contactInfo.hours.map((item) => (
						<div class="flex justify-between border-b border-gray-100 py-2 last:border-0">
							<span class="font-medium">{item.days}</span>
							<span class="text-gray-600">{item.hours}</span>
						</div>
					))}
				</div>
			</div>
			
			<div class="bg-white p-6 rounded-lg shadow-sm border border-primary-100">
				<h3 class="text-2xl font-semibold text-primary-700 mb-6">Obserwuj nas</h3>
				
				<div class="flex gap-4">
					{contactInfo.social.map((item) => (
						<a 
							href={item.url} 
							target="_blank" 
							rel="noopener noreferrer"
							class="flex items-center justify-center w-12 h-12 rounded-full bg-primary-50 text-primary-600 hover:bg-primary-100 transition-colors"
							aria-label={item.name}
						>
							<Icon name={item.icon} class="w-6 h-6" />
						</a>
					))}
				</div>
			</div>
		</div>
		
		<!-- Google Maps -->
		<div class="h-full">
			<div class="h-full rounded-lg overflow-hidden shadow-sm border border-primary-100 bg-white">
				<iframe 
					src={mapsEmbedUrl}
					width="100%" 
					height="100%" 
					style="min-height: 400px; border:0;" 
					allowfullscreen="" 
					loading="lazy" 
					referrerpolicy="no-referrer-when-downgrade"
					title="Google Maps - Beauty and Care Salon Location"
				></iframe>
			</div>
		</div>
	</div>
</section>