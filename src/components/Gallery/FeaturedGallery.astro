---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Button from "@components/Button/Button.astro";

// Get gallery entries from collection
const galleries = await getCollection("gallery", (gallery) => {
  return gallery.data.featured === true && gallery.data.draft !== true;
});

// Just take the first one as the featured gallery - no sorting needed
const featuredGallery = galleries.length > 0 ? galleries[0] : null;
---

{featuredGallery && (
  <section class="site-container py-16 md:py-24 overflow-hidden">
    <div class="mx-auto max-w-6xl">
      <div class="flex flex-col md:flex-row items-center gap-10">
        <!-- Images -->
        <div class="md:w-1/2 relative">
          <div class="relative z-10 overflow-hidden rounded-lg shadow-xl">
            <img 
              src={typeof featuredGallery.data.coverImage === 'string' ? featuredGallery.data.coverImage : featuredGallery.data.coverImage.src} 
              alt={featuredGallery.data.title} 
              width="600" 
              height="450"
              class="w-full h-auto transform transition-transform duration-700 hover:scale-105"
            />
          </div>
          
          {featuredGallery.data.images && featuredGallery.data.images.length > 0 && (
            <div class="absolute -bottom-6 -right-6 w-2/3 overflow-hidden rounded-lg shadow-xl hidden md:block">
              <img 
                src={typeof featuredGallery.data.images[0].src === 'string' ? featuredGallery.data.images[0].src : featuredGallery.data.images[0].src.src} 
                alt={featuredGallery.data.images[0].alt || featuredGallery.data.title} 
                width="400" 
                height="300"
                class="w-full h-auto transform transition-transform duration-700 hover:scale-105"
              />
            </div>
          )}
        </div>
        
        <!-- Content -->
        <div class="md:w-1/2">
          <div class="bg-base-100 p-8 rounded-lg">
            <span class="text-sm uppercase tracking-wider text-primary-500 font-semibold">Nasza Galeria</span>
            <h2 class="h2 mt-2 mb-4">{featuredGallery.data.title}</h2>
            <p class="text-gray-700 mb-6">{featuredGallery.data.description}</p>
            
            <div class="flex flex-wrap gap-4">
              <Button href={`/galeria/${featuredGallery.slug}`} variant="primary">
                Zobacz galeriÄ™
              </Button>
              <Button href="/galeria" variant="outline">
                Wszystkie galerie
              </Button>
            </div>
          </div>
          
          {featuredGallery.data.images && featuredGallery.data.images.length > 1 && (
            <div class="mt-6 flex gap-4 overflow-x-auto pb-4 md:hidden">
              {featuredGallery.data.images.slice(0, 3).map((image) => (
                <div class="flex-shrink-0 w-60 overflow-hidden rounded-lg shadow-md">
                  <img 
                    src={typeof image.src === 'string' ? image.src : image.src.src} 
                    alt={image.alt || "Gallery image"} 
                    width="240" 
                    height="180"
                    class="w-full h-auto"
                  />
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
)}