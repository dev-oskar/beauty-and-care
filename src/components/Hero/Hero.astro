---
/**
 * * Hero with background image
 * You'll want a mobile image, and a desktop image for this.
 */

// components
import Button from "@components/Button/Button.astro";

// Import directly from actual file path to avoid any import issues
// Using relative path to import since absolute imports are causing problems
import heroImagePath from "/public/assets/images/background-hero-new.jpg";
import logoMain from "/public/assets/images/logo-main.png";
---

<section id="hero" class="relative z-10 flex min-h-[100lvh] w-full">
	<!-- background image -->
	<div class="absolute -z-10 h-full min-h-full w-full overflow-hidden">
		<div class="absolute inset-0 bg-black/10"></div>

		<!-- Desktop image -->
		<img
			src={heroImagePath.src}
			class="hidden h-auto min-h-full w-full object-cover object-bottom sm:block"
			alt="Beauty and Care"
			aria-hidden="true"
			loading="eager"
			height="1400"
			width="1800"
		/>

		<!-- Mobile image - same source for simplicity -->
		<img
			src={heroImagePath.src}
			class="h-auto min-h-full w-full object-cover sm:hidden"
			alt="Beauty and Care"
			aria-hidden="true"
			loading="eager"
			height="1400"
			width="1200"
		/>
	</div>

	<!-- hero items -->
	<div class="site-container relative w-full gap-10 py-44 text-center md:py-52 md:text-left">
		<!-- Hero text -->
		<div class="text-base-50 my-auto mr-auto max-w-[800px] flex-col">
			<h1
				class="font-heading-1 flex justify-center text-pretty drop-shadow-[0_2px_2px_rgba(0,0,0,0.4)] md:justify-start"
			>
				<img src={logoMain.src} alt="Beauty and Care" class="h-auto w-[480px] md:w-[640px]" />
			</h1>
			<p
				class="mt-8 text-lg tracking-widest text-pretty drop-shadow-[0_1px_1px_rgba(0,0,0,0.2)] md:max-w-[550px] md:text-2xl"
			>
				Zaawansowane zabiegi liftingujące, modelowanie sylwetki i pielęgnacja skóry z wykorzystaniem
				innowacyjnych technologii
			</p>
			<div class="mt-10 flex flex-wrap justify-center gap-4 md:justify-start">
				<Button
					variant="ghost"
					arrow="right"
					href="/#contact"
					class="pl-0 text-xl text-white drop-shadow-[0_1px_1px_rgba(0,0,0,0.2)] md:text-3xl"
				>
					Odkryj nasze zabiegi
				</Button>
			</div>
		</div>
	</div>
</section>
