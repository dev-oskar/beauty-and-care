---
import { Icon } from "astro-icon/components";

// components
import FooterLink from "./FooterLink.astro";
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";

// site settings
import { getSiteSettings } from "../../utils/getSiteSettings";

const today = new Date();
const siteSettings = await getSiteSettings();
---

<footer class="bg-base-100/40 mt-12 flex flex-col items-center justify-center py-8">
	<div class="site-container">
		<!-- footer links -->
		<div
			class="flex w-full flex-col items-center justify-between gap-2 text-lg md:grid md:grid-cols-5"
		>
			<div class="flex justify-center py-2 text-center md:hidden">
				<SiteLogo />
			</div>
			<div class="col-span-2 flex justify-end gap-4">
				<FooterLink href="/">Strona główna</FooterLink>
				<FooterLink href="/zabiegi">Zabiegi</FooterLink>
				<FooterLink href="/blog">Blog</FooterLink>
			</div>
			<div class="hidden justify-center text-center md:flex">
				<SiteLogo />
			</div>
			<div class="flex gap-4 md:col-span-2">
				<FooterLink href="/cennik">Cennik</FooterLink>
				<FooterLink href="/kontakt">Kontakt</FooterLink>
			</div>
		</div>

		<!-- lets connect -->
		<div class="description mx-auto mt-6 max-w-[21rem] px-4 text-center">
			<p>
				<span class="italic">Bądźmy w kontakcie!</span> Obserwuj nasze social media, aby być na bieżąco
				z nowymi zabiegami i promocjami w Beauty and Care.
			</p>
		</div>

		<!-- socials -->
		<div class="text-primary-500 mt-8 flex justify-center gap-4">
			{
				siteSettings.social.facebook && (
					<a href={siteSettings.social.facebook} target="_blank" rel="noopener noreferrer">
						<Icon name="socials/mdi-facebook" class="size-6 transition hover:opacity-80" />
						<span class="sr-only">Facebook</span>
					</a>
				)
			}
			{
				siteSettings.social.instagram && (
					<a href={siteSettings.social.instagram} target="_blank" rel="noopener noreferrer">
						<Icon name="socials/basil-instagram-solid" class="size-6 transition hover:opacity-80" />
						<span class="sr-only">Instagram</span>
					</a>
				)
			}
			{
				siteSettings.social.twitter && (
					<a href={siteSettings.social.twitter} target="_blank" rel="noopener noreferrer">
						<Icon name="socials/mdi-twitter" class="size-6 transition hover:opacity-80" />
						<span class="sr-only">Twitter</span>
					</a>
				)
			}
			{
				siteSettings.social.youtube && (
					<a href={siteSettings.social.youtube} target="_blank" rel="noopener noreferrer">
						<Icon name="socials/mdi-youtube" class="size-6 transition hover:opacity-80" />
						<span class="sr-only">YouTube</span>
					</a>
				)
			}
		</div>

		<!-- copyright -->
		<div class="mt-4 mb-2 text-center text-sm opacity-80">
			&copy; {today.getFullYear()} Beauty and Care -
			<a
				href="https://cosmicthemes.com"
				class="hover:text-primary-600 transition"
				target="_blank"
				rel="noopener">Projekt: Oskar Pietrucha</a
			>
		</div>
	</div>
</footer>
