---
// layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import Hero from "@components/Hero/Hero.astro";
import ServiceIcons from "@components/Services/ServiceIcons.astro";
import FeaturedServices from "@components/Services/FeaturedServices.astro";
import FeaturedGallery from "@components/Gallery/FeaturedGallery.astro";
import BeforeAfter from "@components/BeforeAfter/BeforeAfter.astro";
import PricingTableCMS from "@components/Pricing/PricingTableCMS.astro";
import About from "@components/About/About.astro";
import Contact from "@components/Contact/Contact.astro";

// data
import siteData from "@config/siteData.json";
---

<BaseLayout
	title={siteData.title}
	description={siteData.description}
	seoTitle={siteData.pages?.home?.seoTitle}
	seoDescription={siteData.pages?.home?.seoDescription}
	keywords={siteData.pages?.home?.keywords}
	canonicalUrl={siteData.pages?.home?.canonicalUrl}
	noindex={siteData.pages?.home?.noindex}
	navStartStyle="white"
>
	<Hero />
	<ServiceIcons />
	<FeaturedServices />
	<FeaturedGallery />
	<BeforeAfter />
	<PricingTableCMS />
	<About />
	<Contact />
</BaseLayout>
