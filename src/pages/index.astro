---
import { Image } from "astro:assets";

// layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import Hero from "@components/Hero/Hero.astro";
import ServiceIcons from "@components/Services/ServiceIcons.astro";
import FeaturedServices from "@components/Services/FeaturedServices.astro";
import FeaturedGallery from "@components/Gallery/FeaturedGallery.astro";
import PricingTable from "@components/Pricing/PricingTable.astro";
import BlogPreview from "@components/BlogPreview/BlogPreview.astro";
import About from "@components/About/About.astro";
import Contact from "@components/Contact/Contact.astro";
import Button from "@components/Button/Button.astro";

// data
import siteData from "@config/siteData.json";
---

<BaseLayout title={siteData.title} description={siteData.description} navStartStyle="white">
	<Hero />
	<ServiceIcons />
	<FeaturedServices />
	<FeaturedGallery />
	<PricingTable />
	<BlogPreview />
	<About />
	<Contact />
</BaseLayout>
