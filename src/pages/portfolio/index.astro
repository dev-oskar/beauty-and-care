---
import { getCollection } from "astro:content";

// layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import Contact from "@components/Contact/Contact.astro";
import PortfolioGrid from "@components/Portfolio/PortfolioGrid.astro";

const posts = await getCollection("posts", ({ data }) => {
	// filter out draft pages
	return data.draft !== true;
});
---

<BaseLayout title="Artykuły" description="Artykuły i porady dotyczące zabiegów kosmetycznych.">
	<div class="site-container pt-24 md:pt-36">
		<div class="mx-auto max-w-6xl text-center">
			<h1 class="h2 text-pretty uppercase">
				Artykuły, które pomogą Ci zadbać o swoje ciało i samopoczucie
			</h1>
		</div>
		<PortfolioGrid posts={posts} />
	</div>

	<Contact class="mt-12" />
</BaseLayout>