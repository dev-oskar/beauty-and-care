---
import BaseLayout from "@layouts/BaseLayout.astro";
import PhotoGalleryGrid from "@components/Gallery/PhotoGalleryGrid.astro";
import Contact from "@components/Contact/Contact.astro";
---

<BaseLayout
  title="Galeria | Beauty and Care"
  description="Galeria zabiegów kosmetycznych i efektów naszej pracy w salonie Beauty and Care. Zobacz przykłady naszych usług i ich rezultaty."
>
  <div class="site-container pt-24 md:pt-36">
    <div class="mx-auto max-w-6xl">
      <div class="text-center mb-12">
        <h1 class="h2 text-pretty uppercase">Galeria</h1>
        <p class="mt-4 text-xl text-gray-600">
          Zobacz zdjęcia z naszych najlepszych zabiegów i przekonaj się o ich skuteczności
        </p>
      </div>

      <PhotoGalleryGrid />
    </div>
  </div>

  <Contact class="mt-16" />
</BaseLayout>